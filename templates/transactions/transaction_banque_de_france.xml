<?xml version="1.0" encoding="UTF-8"?>
<Document xmlns="urn:iso:std:iso:20022:tech:xsd:pain.001.001.03">
    <CstmrCdtTrfInitn>
        <GrpHdr>
            <MsgId>{{ message_id }}</MsgId>
            <CreDtTm>{{ creation_datetime }}</CreDtTm>
            <NbOfTxs>{{ number_of_transactions }}</NbOfTxs>
            <CtrlSum>{{ total_amount }}</CtrlSum>
            <InitgPty>
                <Nm>pass Culture</Nm>
            </InitgPty>
        </GrpHdr>
        <PmtInf>
            <PmtInfId>{{ message_id }}</PmtInfId>
            <PmtMtd>TRF</PmtMtd>
            <NbOfTxs>{{ number_of_transactions }}</NbOfTxs>
            <CtrlSum>{{ total_amount }}</CtrlSum>
            <PmtTpInf>
                <SvcLvl>
                    <Cd>SEPA</Cd>
                </SvcLvl>
                <CtgyPurp>
                    <Cd>GOVT</Cd>
                </CtgyPurp>
            </PmtTpInf>
            <ReqdExctnDt>{{ requested_execution_datetime }}</ReqdExctnDt>
            <Dbtr>
                <Nm>pass Culture</Nm>
            </Dbtr>
            <DbtrAcct>
                <Id>
                    <IBAN>{{ pass_culture_iban }}</IBAN>
                </Id>
            </DbtrAcct>
            <DbtrAgt>
                <FinInstnId>
                    <BIC>{{ pass_culture_bic }}</BIC>
                </FinInstnId>
            </DbtrAgt>
            <ChrgBr>SLEV</ChrgBr>
            {% for payment in payments_by_iban %}
            <CdtTrfTxInf>
                <PmtId>
                    <EndToEndId>{{ payment['unique_id'] }}</EndToEndId>
                </PmtId>
                <Amt>
                    <InstdAmt Ccy="EUR">{{ payment['amount'] }}</InstdAmt>
                </Amt>
                <UltmtDbtr>
                    <Nm>pass Culture</Nm>
                </UltmtDbtr>
                <CdtrAgt>
                    <FinInstnId>
                        <BIC>{{ payment['bic'] }}</BIC>
                    </FinInstnId>
                </CdtrAgt>
                <CdtrAcct>
                    <Id>
                        <IBAN>{{ payment['iban'] }}</IBAN>
                    </Id>
                </CdtrAcct>
                <Purp>
                    <Cd>GOVT</Cd>
                </Purp>
            </CdtTrfTxInf>
            {% endfor %}
        </PmtInf>
    </CstmrCdtTrfInitn>
</Document>
